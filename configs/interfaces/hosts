# Ejecutar los comandos dentro de cada host 

# host 1
sudo ip addr add 192.168.1.11/24 dev eth1
sudo ip route add 192.168.0.0/16 via 192.168.1.1 dev eth1
sudo ip route add 172.16.0.0/16 via 192.168.1.1 dev eth1

# ConfiguraciÃ³n de la interfaz eth1 de h1
sudo ip addr add 192.168.1.11/24 dev eth1
sudo ip route add 172.16.1.0/24 via 192.168.1.1 dev eth1   # Ruta hacia l2
sudo ip route add 192.168.3.0/30 via 192.168.1.1 dev eth1   # Ruta hacia l3
sudo ip route add 172.16.2.0/24 via 192.168.1.1 dev eth1   # Ruta hacia l4


# host 2
sudo ip addr add 172.16.1.12/24 dev eth1
sudo ip route add 192.168.0.0/16 via 172.16.1.1 dev eth1


# host 3
sudo ip addr add 192.168.3.2/30 dev eth1
sudo ip route add 192.168.0.0/16 via 192.168.3.1 dev eth1
sudo ip route add 172.16.0.0/16 via 192.168.3.1 dev eth1

# host 4
sudo ip addr add 172.16.1.14/24 dev eth1
sudo ip route add 192.168.0.0/16 via 172.16.1.2 dev eth1